<div class="space-y-6">
  <!-- Back Link -->
  <div>
    <%= link_to group_path(@group), class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900" do %>
      <span class="mr-2">←</span>
      <%= t("events.edit.back_to_group") %>
    <% end %>
  </div>

  <!-- Page Header -->
  <div>
    <h1 class="text-3xl font-bold text-gray-900"><%= t("events.edit.title") %></h1>
    <p class="mt-2 text-gray-600"><%= t("events.edit.subtitle", event: @event.title) %></p>
  </div>

  <!-- Form -->
  <%= render EventForm::Component.new(group: @group, event: @event) %>
</div>
