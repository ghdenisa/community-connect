<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl mx-auto">
    <!-- Flash Messages -->
    <% if notice.present? %>
      <div class="bg-green-50 border border-green-400 text-green-700 px-4 py-3 rounded-lg mb-6" role="alert">
        <%= notice %>
      </div>
    <% end %>
    <% if alert.present? %>
      <div class="bg-red-50 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-6" role="alert">
        <%= alert %>
      </div>
    <% end %>

    <!-- Header -->
  <div class="mb-8">
    <h2 class="text-3xl font-bold text-gray-900 mb-2">
      <%= t('.title') %>
    </h2>
    <p class="text-gray-600">
      <%= t('.subtitle') %>
    </p>
  </div>

  <!-- Form Card -->
  <div class="bg-white rounded-lg shadow-md border border-gray-200 p-8 mb-6">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Email Field -->
      <div>
        <%= f.label :email, t('.email_label'), class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.email_field :email,
            autofocus: true,
            autocomplete: "email",
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p class="mt-2 text-sm text-amber-600">
            <%= t('.pending_reconfirmation', email: resource.unconfirmed_email) %>
          </p>
        <% end %>
      </div>

      <div class="border-t border-gray-200 pt-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4"><%= t('.change_password_title') %></h3>
        <p class="text-sm text-gray-600 mb-4"><%= t('.change_password_hint') %></p>

        <!-- New Password Field -->
        <div class="mb-6">
          <div class="flex items-center justify-between mb-2">
            <%= f.label :password, t('.new_password_label'), class: "block text-sm font-medium text-gray-700" %>
            <% if @minimum_password_length %>
              <span class="text-xs text-gray-500">
                <%= t('.password_minimum', count: @minimum_password_length) %>
              </span>
            <% end %>
          </div>
          <%= f.password_field :password,
              autocomplete: "new-password",
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors",
              placeholder: t('.new_password_placeholder') %>
        </div>

        <!-- Password Confirmation Field -->
        <div>
          <%= f.label :password_confirmation, t('.password_confirmation_label'), class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password_confirmation,
              autocomplete: "new-password",
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors",
              placeholder: t('.password_confirmation_placeholder') %>
        </div>
      </div>

      <!-- Current Password Field (Required for changes) -->
      <div class="border-t border-gray-200 pt-6">
        <%= f.label :current_password, t('.current_password_label'), class: "block text-sm font-medium text-gray-700 mb-2" %>
        <p class="text-sm text-gray-600 mb-2"><%= t('.current_password_hint') %></p>
        <%= f.password_field :current_password,
            autocomplete: "current-password",
            required: true,
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors",
            placeholder: t('.current_password_placeholder') %>
      </div>

      <!-- Submit Button -->
      <div class="flex items-center justify-between pt-6">
        <%= link_to t('.back_link'), :back, class: "text-gray-600 hover:text-gray-900 font-medium" %>
        <%= f.submit t('.submit_button'),
            class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors duration-200 cursor-pointer" %>
      </div>
    <% end %>
  </div>

  <!-- Delete Account Card -->
  <div class="bg-red-50 rounded-lg shadow-md border border-red-200 p-8">
    <h3 class="text-xl font-bold text-red-900 mb-2"><%= t('.delete_section_title') %></h3>
    <p class="text-red-700 mb-4">
      <%= t('.delete_section_description') %>
    </p>
    <%= button_to t('.delete_button'),
        registration_path(resource_name),
        data: { confirm: t('.delete_confirmation'), turbo_confirm: t('.delete_confirmation') },
        method: :delete,
        class: "bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors duration-200" %>
  </div>
  </div>
</div>
