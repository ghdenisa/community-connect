<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 bg-gray-50">
  <div class="max-w-md w-full space-y-8">
    <!-- Flash Messages -->
    <% if notice.present? %>
      <div class="bg-green-50 border border-green-400 text-green-700 px-4 py-3 rounded-lg" role="alert">
        <%= notice %>
      </div>
    <% end %>
    <% if alert.present? %>
      <div class="bg-red-50 border border-red-400 text-red-700 px-4 py-3 rounded-lg" role="alert">
        <%= alert %>
      </div>
    <% end %>
    <!-- Header -->
    <div class="text-center">
      <h2 class="text-4xl font-bold text-gray-900 mb-2">
        <%= t('.title') %>
      </h2>
      <p class="text-gray-600">
        <%= t('.subtitle', app_name: t('app.name')) %>
      </p>
    </div>

    <!-- Form Card -->
    <div class="bg-white rounded-lg shadow-md border border-gray-200 p-8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <!-- Email Field -->
        <div>
          <%= f.label :email, t('.email_label'), class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors",
              placeholder: t('.email_placeholder') %>
        </div>

        <!-- Password Field -->
        <div>
          <%= f.label :password, t('.password_label'), class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password,
              autocomplete: "current-password",
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors",
              placeholder: t('.password_placeholder') %>
        </div>

        <!-- Submit Button -->
        <div>
          <%= f.submit t('.submit_button'),
              class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-4 rounded-lg transition-colors duration-200 cursor-pointer" %>
        </div>
      <% end %>
    </div>

    <!-- Links -->
    <div class="text-center text-sm">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
